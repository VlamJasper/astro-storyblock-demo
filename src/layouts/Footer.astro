---
import { storyblokEditable } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<footer>
    <div class="section-container">
        <div class="element-container">
            <div class="wrapper">
                <div class="element">
                    <h3>Menu</h3>
                    <a class={currentPath === '' ? 'active' : ''} href="/"
                        >Home</a
                    >
                    <a
                        class={currentPath === 'about' ? 'active' : ''}
                        href="/about">About</a
                    >
                    <a
                        class={currentPath === 'contact' ? 'active' : ''}
                        href="/contact">Contact</a
                    >
                </div>
            </div>
            <div class="wrapper">
                <div class="element">
                    <h3>Contact</h3>
                    <p>Straatnaam</p>
                    <p>Postcode</p>
                    <p>Land</p>
                </div>
            </div>
            <div class="wrapper">
                <div class="element">
                    <h3>Socials</h3>
                    <!-- <a href="">Instagram</a>
                    <a href="">Facebook</a>
                    <a href="">LinkedIn</a> -->
                    <p>Instagram</p>
                    <p>Facebook</p>
                    <p>LinkedIn</p>
                </div>
            </div>
        </div>
    </div>

    <style>
        footer {
            min-height: calc(100vh - 88px);
            color: var(--main-text-color);
        }

        a,
        p {
            display: block;
            padding: 12px 0px;
        }

        a:hover {
            text-decoration: underline;
        }

        a.active {
            text-decoration: underline;
        }

        .element {
            padding: 32px;
        }

        .element-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(310px, 1fr));
            grid-template-rows: auto;
        }

        .wrapper {
            background: var(--main-bg-color);
            border-left: var(--main-border-weight) solid
                var(--main-border-color);
            border-bottom: var(--main-border-weight) solid
                var(--main-border-color);
        }

        .wrapper:first-child {
            border-left: 0px solid white;
        }

        @media (max-width: 929px) {
            .wrapper:nth-child(3n + 0) {
                border: 0px solid white;
                outline: var(--main-border-weight) solid white;
            }

            .section-container {
                border-bottom: var(--main-border-weight) solid
                    var(--main-border-color);
            }
        }

        @media (max-width: 619px) {
            .wrapper {
                border-left: 0px solid var(--main-border-color);
            }
        }
    </style>
</footer>
