<style is:global>
    /* Set base font styles */
    body {
        font-family: Tahoma, Geneva, Sans-Serif;
        font-size: 16px;
        line-height: 1.5;
    }

    /* Set heading styles */
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: bold;
        margin-bottom: 1rem;
        color: red;
        text-transform: uppercase;
    }

    h1 {
        font-size: 10rem;
        line-height: 1;
    }

    h2 {
        font-size: 2rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    h5 {
        font-size: 1rem;
    }

    h6 {
        font-size: 0.875rem;
    }

    a:hover {
        text-decoration: underline;
    }

    /* Set code block styles */
    pre {
        background-color: #f8f8f8;
        padding: 1rem;
        overflow-x: auto;
    }

    code {
        font-family: 'Courier New', Courier, monospace;
    }

    /* Set blockquote styles */
    blockquote {
        background-color: #f8f8f8;
        padding: 1rem;
        margin: 1rem 0;
        border-left: 5px solid purple;
    }

    /* Set horizontal rule style */
    hr {
        border: none;
        border-top: 1px solid #ccc;
        margin: 1rem 0;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 8em;
        }
    }

    @media (max-width: 530px) {
        h1 {
            font-size: 3.6em;
        }
    }
</style>
