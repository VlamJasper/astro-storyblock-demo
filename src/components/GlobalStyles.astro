<style is:global>
    /* ROOT VARIABLES */

    :root {
        --main-bg-color: black;
        --main-text-color: white;
        --main-border-color: white;
        --main-border-weight: 2px;

        --button-bg-color: black;
        --button-text-color: white;
        --button-border-color: white;
        --button-border-weight: 2px;
    }

    /* HERO BACKGROUND COLOR */

    .var-background-color {
        /* background-color: var(--main-bg-color); */
    }

    /* BASE FONT */

    body {
        font-family: Tahoma, Geneva, Sans-Serif;
        font-size: 16px;
        line-height: 1.5;
        background-color: var(--main-bg-color);
    }

    /* HEADINGS */

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: bold;
        margin-bottom: 1rem;
        color: var(--main-text-color);
        text-transform: uppercase;
    }

    h1 {
        font-size: 10rem;
        line-height: 1;
    }

    h2 {
        font-size: 2rem;
        line-height: 1;
    }

    h3 {
        font-size: 1.5rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    h5 {
        font-size: 1rem;
    }

    h6 {
        font-size: 0.875rem;
    }

    /* MARKDOWN BLOGPOSTS */

    pre {
        background-color: var(--main-bg-color);
        padding: 1rem;
        overflow-x: auto;
        border: var(--main-border-weight) solid var(--main-border-color);
    }

    code {
        color: var(--main-text-color);
        font-family: 'Courier New', Courier, monospace;
    }

    blockquote {
        color: var(--main-text-color);
        font-style: italic;
        background-color: var(--main-bg-color);
        padding: 1rem;
        margin: 1rem 0;
        border-left: var(--main-border-weight) solid var(--main-border-color);
    }

    hr {
        border: none;
        border-top: var(--main-border-weight) solid var(--main-border-color);
        margin: 1rem 0;
    }

    /* CTA BUTTONS */

    .element-button-wrapper {
        padding-top: 24px;
        display: block;
    }

    .element-button {
        display: inline-block;
        cursor: pointer;

        background-color: var(--button-bg-color);
        color: var(--button-text-color);
        border: var(--button-border-weight) solid var(--button-border-color);
        box-shadow: 4px 4px 0px 1px var(--button-border-color);

        font-weight: bold;
        font-size: 1em;
        text-transform: uppercase;

        padding: 1em 2em;
        width: auto;
    }

    .element-button:hover {
        background-color: var(--button-text-color);
        color: var(--button-bg-color);
    }

    /* RESPONSIVE STYLES */

    @media (max-width: 768px) {
        h1 {
            font-size: 8em;
        }
    }

    @media (max-width: 530px) {
        h1 {
            font-size: 3.6em;
        }
    }
</style>
