---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div class="wrapper" {...storyblokEditable(blok)}>
    <img src={blok.image?.filename} alt={blok.image?.alt} />
</div>

<style>
    .wrapper {
        border: 1px solid black;
    }

    img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        /* max-height: 33vh; */
        /* max-width: 25vw; */
    }
</style>
