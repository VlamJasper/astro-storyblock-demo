---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div class="wrapper" {...storyblokEditable(blok)}>
    <img src={blok.image?.filename} alt={blok.image?.alt} />
</div>

<style>
    /* TEXT ELEMENT IN GRID */

    .wrapper {
        border-right: var(--main-border-weight) solid var(--main-border-color);
        border-bottom: var(--main-border-weight) solid var(--main-border-color);
    }

    img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }
</style>
