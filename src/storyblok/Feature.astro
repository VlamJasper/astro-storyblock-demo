---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div class="wrapper" {...storyblokEditable(blok)}>
    <div class="element">
        <h3 class="text-lg font-medium mb-4">{blok.name}</h3>
        <p class="text-gray-700">{blok.content}</p>
    </div>
</div>

<style>
    .wrapper {
        border-right: 2px solid black;
        border-bottom: 2px solid black;
    }

    .element {
        background: white;
        padding: 30px;
    }
</style>
