---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div class="wrapper" {...storyblokEditable(blok)}>
    <div class="bg-white p-8">
        <h3 class="text-lg font-medium mb-4">{blok.name}</h3>
        <p class="text-gray-700">{blok.content}</p>
    </div>
</div>

<style>
    .wrapper {
        border: 1px solid black;
    }
</style>
