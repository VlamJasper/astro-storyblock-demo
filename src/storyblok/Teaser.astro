---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)}>
    <h2>
        &#8212; {blok.headline} &#8212;
    </h2>
</div>

<style>
    div {
        background: black;
        border-bottom: 2px solid white;
        overflow: hidden;
        user-select: none;
    }

    h2 {
        color: white;
        font-weight: bold;
        text-align: center;
        white-space: nowrap;

        margin-top: 12px;

        animation: blur 12s ease 0s infinite;
        -webkit-animation: blur 12s ease 0s infinite;
        -moz-animation: blur 12s ease 0s infinite;
    }
</style>
