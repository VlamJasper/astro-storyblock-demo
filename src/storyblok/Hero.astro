---
import { storyblokEditable } from '@storyblok/astro';
// import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props;
---

<div
    {...storyblokEditable(blok)}
    class="h-screen grid grid-rows-1 md:grid-rows-2 gap-8 bg-gradient-to-r from-cyan-500 to-blue-500"
>
    <h1 class="text-4xl font-bold text-center text-white row-span-1">
        {blok.headline}
    </h1>
    <p class="text-lg text-center text-white row-span-1">
        {blok.subline}
    </p>
    <button
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mx-auto mt-8"
        >{blok.cta}</button
    >
</div>
